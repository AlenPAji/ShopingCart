 <section>
 
 <a href="/admin/add-product" class="btn btn-success m-3">Add Product</a>
<table class="table p-2">
 
  <thead>
    <tr>
      <th scope="col">no</th>
      <th scope="col">title</th>
      <th scope="col">Description</th>
      <th scope="col">price</th>
      <th>image</th>
    </tr>
  </thead>
  <tbody>
    {{#each responce}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.name}}</td>
      <td>{{this.desc}}</td>
      <td>{{this.price}}</td>
      <td><img src="/product-images/{{this.img.imageName}}" alt="" width="60rem" height="40rem"></td>
      <td>
        <a href="/admin/edit-product" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sur that you want to delete {{this.name}} ?')">Delete</a>

        </td>
    </tr>
    {{/each}}
   
  </tbody>
</table>
</section>